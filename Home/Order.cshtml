@model List<lr6.Models.Product>

<h2>Замовлення продуктів</h2>

<form asp-action="Summary" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <label>Продукт:</label>
            <select name="products[@i].ProductName" required>
                <option value="">--Виберіть продукт--</option>
                @foreach (var item in (List<lr6.Models.MenuItem>)ViewBag.MenuItems)
                {
                    <option value="@item.Name">@item.Name - @item.Price грн</option>
                }
            </select>
            <span asp-validation-for="@Model[i].ProductName"></span>

            <label>Кількість:</label>
            <input name="products[@i].Quantity" type="number" required min="1" />
            <span asp-validation-for="@Model[i].Quantity"></span>
        </div>
    }
    <button type="submit">Надіслати замовлення</button>
    <button type="reset" class="btn btn-secondary">Очистити</button> 
</form>

