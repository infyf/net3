@model lr6.Models.User

<form asp-action="Register" method="post">
    <div>
        <label for="Name">Name:</label>
        <input type="text" asp-for="Name" required />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label for="Age">Age:</label>
        <input type="number" asp-for="Age" required />
        <span asp-validation-for="Age"></span>
    </div>
    <div>
        <label for="productCount">How many units of the product you want to order?</label>
        <input type="number" name="productCount" min="1" max="100" required />
    </div>
    <button type="submit">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
