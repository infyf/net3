@{
    ViewData["Title"] = "Завантаження файлу";
}

<h2>тект файл</h2>

@if (ViewBag.Error != null)
{
    <div class="error-message" style="color: red; margin-bottom: 10px;">@ViewBag.Error</div>
}

<form method="post" class="styled-form" style="max-width: 400px; margin: auto;">
    <div class="form-group" style="margin-bottom: 15px;">
        <label for="FirstName">Ім'я:</label>
        <input type="text" id="FirstName" name="firstName" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" placeholder="Введіть ім'я" />
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label for="LastName">Прізвище:</label>
        <input type="text" id="LastName" name="lastName" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" placeholder="Введіть прізвище" />
    </div>
    <div class="form-group" style="margin-bottom: 15px;">
        <label for="FileName">Назва файлу:</label>
        <input type="text" id="FileName" name="fileName" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" placeholder="Введіть назву файлу" />
    </div>
    <div class="form-group">
        <button type="submit" style="background-color: #007bff; color: white; padding: 10px; border: none; border-radius: 4px; cursor: pointer;">Продовжити</button>
    </div>
</form>
